#:kivy 1.11.1

<Label>:
    font_size: 27.5
    markup: True
    halign: "center"
    valign: "center"

<Button>:
    font_size: 20
    text_size: self.size
    markup: True
    halign: "center"
    valign: "center"
    #color: 0.73725490196, 0.96862745098, 0.96470588235, 1
    background_color: 0.23137254902, 0.30588235294, 0.56078431372, 1

WindowManager:
    SignUpWindow:
    LogInWindow:
    MainWindow:
    CalendarWindow:
    AddRemoveCalEventWindow:
    AddRemoveExerciseWindow:
    AddRemoveMedicationWindow:
    BloodSugarWindow:
    BloodSugarAddWindow:
    BloodSugarRemoveWindow:

<SignUpWindow>:
    name: "signup"
    FloatLayout:
        canvas.before:
            Color: 
                rgba: 0.49803921568, 0.692, 0.98039215686, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "[b][u]Golden Years[/u][/b]"
            font_size: 35
            color: 0, 0, 0, 1
            pos_hint: {"x": 0.25, "top": 0.975}
            size_hint: 0.5, 0.1

        GridLayout:
            pos_hint: {"x": 0.025, "top": 0.85}
            size_hint: 0.95, 0.5
            cols: 2
            Label:
                text: "[b]Username:[/b]"
                color: 0, 0, 0, 1
            TextInput:
                id: username
                multiline: False
            Label:
                text: "[b]Password:[/b]"
                color: 0, 0, 0, 1
            TextInput:
                id: password
                multiline: False
                password: True
            Label:
                text: "[b]Email:[/b]"
                color: 0, 0, 0, 1
            TextInput:
                id: email
                multiline: False

        Button:
            size_hint: 0.35, 0.25
            pos_hint: {"x": 0.1, "top": 0.30}
            text: "[b]Sign Up[/b]"
            on_release: 
                root.manager.transition.direction = "down"
                root.signUp()
        Button:
            size_hint: 0.35, 0.25
            pos_hint: {"right": 0.9, "top": 0.30}
            text: "[b]Already Have An Account[/b]"
            on_release: 
                app.root.current = "login"
                root.manager.transition.direction = "left"

