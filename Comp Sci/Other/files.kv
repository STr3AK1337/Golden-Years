#:kivy 1.11.1

<MyGrid>

    username: username
    password: password
    email: email

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2
            Label:
                text: "Username: "
            TextInput:
                id: username
                multiline: False
            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline: False
            Label:
                text: "Email: "
            TextInput:
                id: email
                multiline: False 

        Button:
            text: "Submit"  
            on_press: root.but()
